<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sustain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/app_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="edittext_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#DEDEDE</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- ====== LoaderDialog ====== -->
    <style name="DialogLoaderStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/loader_dialog_bg</item>
        <item name="colorOnBackground">@color/loader_dialog_bg</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <!-- ========== LOGIN ========== -->
    <style name="LoginMethodSelectionRadio">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/method_selection_radio_bg</item>
        <item name="android:textColor">@color/method_selection_radio_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>